import(methods)

exportClasses("memuse")

exportMethods(
  ### Accessors
  "size", "unit", "unit.prefix", "unit.names",
  ### Replacers
  "size<-", "unit<-", "unit.prefix<-", "unit.names<-",
  ### Printing
  "print", "show", 
  ### Swaps
  "swap.unit", "swap.prefix", "swap.names",
  ### Misc
  "howmany"#, "as.numeric"
)

export(
  # Constructor
  memuse, mu,
  # Arithmetic
  "+", "-", "*", "/", "^", 
  # Misc
  print, howbig, howbig.par, howmany
)
